@model Product
    
        <div class="col-sm-4 col-lg-4 col-md-4">
            <div class="thumbnail">
                <img src="~/img/@Model.ImageUrl" alt="" style="width:100%" />
                <div class="caption">
                    <h3 class="pull-right">@Model.Price.ToString("c")</h3>
                    <h3>
                        <a>@Model.Name</a>
                    </h3>
                    <p>@Model.ShortDescription</p>
                </div>
                
                   <div  style="float:left; padding-top:9px; ">

                        <label style="color:darkseagreen;font-size:15px;" > Count </label>
                        <input id="Count" type="number" step="1" min="1" max="100" >
                    
                    </div>
             
                <div class="addToCart text-right">
                    <p class="button ">
                        <a class="btn btn-success" id="cartButton"
                           asp-controller="ShoppingCart"
                           asp-action="AddToShoppingCart"
                           asp-route-productId="@Model.ProductId">
                            Add to cart
                        </a>
                    </p>
                </div>
            </div>
        </div>
